<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.TurismoPage.TurismoPageFragment">

        <TextView
            android:id="@+id/nombreTxV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textSize="34sp"
            />

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:padding="24dp"
            android:scaleType="fitCenter"
            android:cropToPadding="true"
            android:background="@drawable/border_image"

            android:src="@drawable/ic_turismo"></ImageView>



        <TextView
            android:id="@+id/valorTxV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Valor"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/direccionTxV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_gravity="center"
            android:text="Direccion"
            android:textStyle="bold"
            android:textAlignment="center"

            app:layout_constraintStart_toStartOf="parent"></TextView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/historiaTxV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:text="Historia"
                android:textColor="#000000"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagen_1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_turismo"></ImageView>
                <ImageView
                    android:id="@+id/imagen_2"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_turismo"></ImageView>
                <ImageView
                    android:id="@+id/imagen_3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_turismo"></ImageView>
                <ImageView
                    android:id="@+id/imagen_4"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_turismo"></ImageView>
            </LinearLayout>
        </HorizontalScrollView>
        <Button
            android:id="@+id/btnMapa"
            style="@android:style/Widget.Holo.Light.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="Abrir en mapa"
            android:textColor="#FFFFFF"></Button>

    </LinearLayout>
</ScrollView>